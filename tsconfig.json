{
  "compilerOptions": {
    "target": "es2018",
    "module": "ESNext",
    "moduleResolution": "node",
    "declaration": true,
    "allowJs": true,
    "lib": ["es2019", "dom"],
    "outDir": "./lib/",
    "strict": true,
    "noUnusedLocals": true,
		"noImplicitReturns": true,
		"noImplicitOverride": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "stripInternal": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src"
  ]
}
